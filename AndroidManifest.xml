<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rbonestell.myhavelock"
    android:versionCode="8"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rbonestell.myhavelock.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rbonestell.myhavelock.ConfigActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_config" />
        <activity
            android:name="com.rbonestell.myhavelock.ChartActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_chart" />
        <activity
            android:name="com.rbonestell.myhavelock.FundActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_details" />
    </application>

</manifest>
